pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                sh '''
                   git clone https://github.com/thangacodes/dotnet_webapp.git
              '''
            }
        }
        stage('Build') {
            steps {
                   sh '''
                      echo "checking the path"
                      pwd
                      sleep 5
                      ls -l 
                      // terraform init
                      // terraform validate
                      // terraform plan -var-file terraform.tfvars
                   '''
            }
        }
    }
}
