pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'git clone https://github.com/thangacodes/dotnet_webapp.git'
            }
        }
        stage('InfraBuild') {
            steps {
                script {
                    dir('Infrabuild_scripts') {
                        echo "navigating to the Infrabuild_scripts"
                        sh 'terraform init'
                        sh 'terraform validate'
                        sh 'terraform plan -var-file=terraform.tfvars'
                    }
                }
            }
        }
        stage('DotnetBuild') {
            steps {
                script {
                    dir('super-service') {
                        sh 'tree'
                        sh 'docker build -t service .'
                        sh 'docker images'
                        sh 'docker run --name webapp -d -p 8090:80 service'
                        sh 'docker ps'
                        sh 'docker ps -a'
                        echo "sleep for a while"
                        sleep 30
                        sh 'docker stop webapp'
                        sh 'docker rm webapp'
                        sh 'docker rmi -f $(docker images -q)'
                        sh 'yes | docker system prune'
                        sh 'docker images'
                    }
                }
            }
        }
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
    }
}
