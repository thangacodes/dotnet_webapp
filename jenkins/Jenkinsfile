pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'git clone https://github.com/thangacodes/dotnet_webapp.git'
            }
        }
        stage('InfraBuild') {
            steps {
                   script{
                       dir('cd Infrabuild_scripts/') {
                      echo "navigating to the Infrabuild_scripts"
                      terraform init
                      terraform validate
                      terraform plan -var-file terraform.tfvars
                  }
            }
        }
            stage('DotnetBuild'){
                steps{
                    script{
                    dir('cd super-service/'){
                    tree
                    docker build -t super-service .
                    docker images
                    docker run --name webapp -d -p 8090:80 super-service
                    docker ps 
                    docker ps -a
                    echo "sleep for a while"
                    sleep 30
                    docker stop webapp
                    docker rm webapp
                    docker rmi -f $(docker images)
                    yes | docker system prune
                    docker images
                    }
        }
    }
    }
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
    }
}
