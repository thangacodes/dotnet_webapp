pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                sh '''
                   git clone https://github.com/thangacodes/dotnet_webapp.git
              '''
            }
        }
        stage('Build') {
            steps {
                   sh '''
                      echo "checking the path"
                      pwd
                      sleep 5
                      echo "navigating to the Infrabuild_scripts"
                      cd Infrabuild_scripts/
                      ls -l 
                      terraform init
                      terraform validate
                      terraform plan -var-file terraform.tfvars
                   '''
            }
        }
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
    }
}
